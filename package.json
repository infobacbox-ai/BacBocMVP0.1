{
	"name": "supastarter-nextjs",
	"private": true,
	"scripts": {
		"build": "dotenv -c -- turbo build",
		"dev": "dotenv -c -- turbo dev --concurrency 15",
		"type-check": "dotenv -c -- turbo type-check",
		"start": "dotenv -c -- turbo start",
		"lint": "biome lint . ",
		"check": "biome check",
		"clean": "turbo clean",
		"format": "biome format . --write",
		"check:prod-mocks": "pnpm --filter @repo/scripts check:prod-mocks",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"biome check --write --no-errors-on-unmatched"
		],
		"*.{json,md}": [
			"biome format --write --no-errors-on-unmatched"
		]
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.14.0",
	"dependencies": {
		"tslib": "^2.8.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@repo/tsconfig": "workspace:*",
		"@types/node": "^24.10.1",
		"dotenv-cli": "^11.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"turbo": "^2.7.2",
		"typescript": "5.9.3"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@prisma/client",
			"@prisma/engines",
			"@swc/core",
			"prisma",
			"prisma-zod-generator",
			"sharp"
		],
		"packageExtensions": {
			"zod": {
				"exports": {
					"./v4/core": {
						"types": "./index.d.ts",
						"default": "./index.mjs"
					}
				}
			}
		}
	}
}
